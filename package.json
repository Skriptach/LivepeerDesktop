{
  "name": "LivepeerDesktop",
  "author": "Livepeer",
  "version": "0.0.1",
  "description": "Livepeer Desktop App",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/livepeer/LivepeerDesktop.git"
  },
  "main": "main.js",
  "scripts": {
    "lint": "eslint app test *.js",
    "dist-main": "env-cmd ./.prod.env node -r babel-register ./node_modules/webpack/bin/webpack --config ./config/webpack.config.electron.js --progress --profile --colors --display-error-details",
    "dist-renderer": "env-cmd ./.prod.env node -r babel-register ./node_modules/webpack/bin/webpack --config ./config/webpack.config.prod.js --progress --profile --colors --display-error-details",
    "dist": "npm run dist-main && npm run dist-renderer",
    "start": "npm run dist && env-cmd ./.prod.env electron ./main",
    "start-hot": "env-cmd ./.dev.env electron -r babel-register -r babel-polyfill ./main.dev",
    "start-hot-debug": "env-cmd ./.dev.env electron --inspect-brk=5858 -r babel-register -r babel-polyfill ./main.dev",
    "hot-server": "env-cmd ./.dev.env node -r babel-register server.dev.js",
    "dev": "concurrently --kill-others \"npm run hot-server\" \"npm run start-hot\"",
    "debug": "concurrently --kill-others \"npm run hot-server\" \"npm run start-hot-debug\"",
    "release": "npm run dist && npm run package-all",
    "package-all": "build -mwl",
    "package-mac": "build -m",
    "package-win": "build -w",
    "package-linux": "build -l"
  },
  "bin": {
    "electron": "./node_modules/.bin/electron"
  },
  "license": "GPL-3.0-only",
  "devDependencies": {
    "app-root-dir": "^1.0.2",
    "asar": "^0.14.3",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^7.1.5",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-dev-expression": "^0.2.1",
    "babel-plugin-syntax-decorators": "^6.13.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.5",
    "babel-plugin-typecheck": "^3.9.0",
    "babel-plugin-webpack-loaders": "^0.9.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "classnames": "^2.2.6",
    "concurrently": "^3.6.1",
    "copy-webpack-plugin": "^4.5.2",
    "css-loader": "^1.0.0",
    "del": "^3.0.0",
    "devtron": "^1.4.0",
    "dotenv-webpack": "^1.5.7",
    "electron-debug": "^2.0.0",
    "electron-devtools-installer": "^2.2.4",
    "electron-packager": "^12.1.0",
    "env-cmd": "^8.0.2",
    "eslint": "^5.3.0",
    "eslint-import-resolver-webpack": "^0.10.1",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.10.0",
    "express": "^4.16.3",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "json-loader": "^0.5.7",
    "node-libs-browser": "^2.1.0",
    "open-browser-webpack-plugin": "0.0.5",
    "postcss": "^7.0.2",
    "postcss-extend": "^1.0.5",
    "postcss-import": "^11.1.0",
    "postcss-loader": "^2.1.6",
    "postcss-nested": "^3.0.0",
    "postcss-preset-env": "^5.2.2",
    "postcss-reporter": "^5.0.0",
    "postcss-simple-vars": "^4.1.0",
    "spectron": "^3.8.0",
    "style-loader": "^0.21.0",
    "svg-inline-loader": "^0.8.0",
    "uglify-es": "git://github.com/mishoo/UglifyJS2#harmony-v3.3.9",
    "uglifyjs-webpack-plugin": "^1.2.7",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-hot-middleware": "^2.22.2",
    "webpack-merge": "^4.1.4"
  },
  "build": {
    "extraResources": "../dist",
    "appId": "org.livepeer.desktop",
    "directories": {
      "output": "release"
    },
    "asarUnpack": [
      "**/app/node_modules/ffmpeg-static/*",
      "**/app/node_modules/livepeer-static/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "resources/windows/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "installerHeaderIcon": "resources/windows/setup-icon.ico"
    },
    "mac": {
      "icon": "resources/osx/icon.icns",
      "category": "your.app.category.type"
    },
    "dmg": {
      "icon": "resources/osx/dmg-icon.icns"
    }
  },
  "dependencies": {
    "@livepeer/sdk": "^1.0.0-alpha.5",
    "ajv": "^6.5.2",
    "electron": "^3.0.0-beta.4",
    "electron-builder": "^20.26.1",
    "electron-log": "^2.2.16",
    "events": "^3.0.0",
    "mailgun-js": "^0.20.0",
    "mobx": "^5.0.3",
    "mobx-react": "^5.2.3",
    "mobx-react-devtools": "^6.0.2",
    "node-media-server": "^1.4.3",
    "pixi.js": "^4.8.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-router-dom": "^4.4.0-alpha.1",
    "request": "^2.87.0",
    "rimraf": "^2.6.2",
    "shelljs": "^0.8.2",
    "source-map-support": "^0.5.6",
    "xmlhttprequest": "^1.8.0"
  }
}
